# Root editor config file
root = true

# Common settings
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python files - 4 spaces (PEP 8)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# JavaScript, Vue, CSS, HTML - 2 spaces (industry standard)
[{*.js,*.vue,*.css,*.scss,*.html}]
indent_style = space
indent_size = 2
max_line_length = 99

# JSON files - mostly doctype schema files
[{*.json}]
insert_final_newline = false
indent_style = space
indent_size = 2