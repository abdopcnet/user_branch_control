{
	"root": true,
	"env": {
	  "browser": true,
	  "es2021": true
	},
	"extends": [
	  "eslint:recommended",
	  "plugin:vue/vue3-recommended",
	  "prettier"
	],
	"plugins": ["vue"],
	"rules": {
	  // Disable all formatting rules so Prettier handles formatting
	  "prettier/prettier": "off",
	  "indent": "off",
	  "quotes": "off",
	  "semi": "off",
	  "comma-dangle": "off",
	  "vue/html-indent": "off",
	  "vue/max-attributes-per-line": "off"
	}
  }
  